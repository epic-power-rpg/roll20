include ../global/advantages.pug

// Basic section 
.basic.section.basic-tab
  = '\n'
  | Race 
  input.wide(name='attr_race' type='text')
  = '\n'
  |   Gender 
  input.wideish(name='attr_gender' type='text')
  = '\n'
  |   Height 
  input.wideish(name='attr_height' type='text')
  = '\n'
  |   Weight 
  input.wideish(name='attr_weight' type='number')
  = '\n'
  |   Age 
  input.wideish(name='attr_age' type='number')
  .small-spacer
  .advantages-and-feats.horizontal-flex
    // Advantages and Disadvantages 
    .advantages
      input(name='attr_advantage_total_CP' type='hidden' value='0')
      .advantage.epic-table-header-grid
        .advantage-grid Advantage
        .count-placeholder-grid
        .CP-grid CP
      each advantage in advantages
        .advantage-table(data-epic-table-name="advantage")
          div.advantage-grid= advantage.description
          if advantage.minusAdvantageFieldName
            input(name=advantage.minusAdvantageFieldName type='checkbox' value='1' hidden='true')
          select.skillexpertise-grid(name=advantage.fieldName)
            option(value=' ')
            each optionValue in advantage.skillExpertiseOptions || [-1, 1, 2, 3]
              option(value=optionValue)=optionValue
          span.CP-grid(name=advantage.cpFieldName)
      fieldset.repeating_extraadvantage
        input.extraadvantagename-grid(name='attr_extraadvantagename' type='text')
        input.extraadvantageCP-grid(name='attr_extraadvantageCP' type='number')
        span.CP-grid.extraadvantageCPdescription-grid(name='attr_extraadvantageCPdescription')
    = '\n'
    | &emsp; &emsp;
    // Feats 
    .feats
      input(name='attr_feat_total_CP' type='hidden' value='0')
      input(name='attr_feat_total_single_CP' type='hidden' value='0')
      .feat.epic-table-header-grid
        .featextraordinary-grid Extr
        .featname-grid Epic Feat
        .CP-grid CP
      fieldset.repeating_feat
        input.featextraordinary-grid(name='attr_featextraordinary' type='checkbox' value='1')
        input.featname-grid(name='attr_featname' type='text')
        input.CP-grid(name='attr_featCP' value='' type='number')
